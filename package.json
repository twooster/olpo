{
  "name": "olpo",
  "version": "0.5.0",
  "description": "Olpo: A type-safe TypeScript resource pool",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm run test",
    "preversion": "npm run build-docs && git add docs",
    "build": "rimraf 'dist' && tsc -b tsconfig-build.json && npm run build-docs",
    "build-docs": "typedoc --out docs  --exclude '**/*.spec.*' --mode file ./src/index.ts",
    "cover": "jest --coverage && codecov",
    "test": "jest"
  },
  "author": "Tony Wooster <twooster@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "codecov": "^3.2.0",
    "jest": "^24.3.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pool",
    "typescript",
    "resource pool",
    "promise"
  ],
  "typings": "dist/index.d.ts"
}
